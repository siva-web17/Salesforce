<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>DoNotEditCustomerRequest</fullName>
    <active>true</active>
    <description>This validation rule is used to not allow users to modify the Customer Request record type.</description>
    <errorConditionFormula>NOT($Setup.BypassTriggersValidation__c.DisableValidation__c)
&amp;&amp;
$RecordType.DeveloperName = "CustomerRequest"</errorConditionFormula>
    <errorMessage>Customer Requests cannot be updated.</errorMessage>
</ValidationRule>
