<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CustomerRequest__c</fullName>
    <description>This field is used to capture why the Opportunity is created when manually entering an Opportunity in the system. It is then mapped with the request type so that the correct Event is generated.</description>
    <externalId>false</externalId>
    <inlineHelpText>Select an option, which best describes why we are entering this opportunity, e.g. if the customer walked in and we gave them a brochure then it can be Brochure Request or if customer called us and wants some general information then it can be Info Request</inlineHelpText>
    <label>Customer Request</label>
    <required>false</required>
    <trackFeedHistory>false</trackFeedHistory>
    <trackHistory>True</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Picklist</type>
    <valueSet>
        <restricted>true</restricted>
        <valueSetDefinition>
            <sorted>true</sorted>
            <value>
                <fullName>Brochure Request</fullName>
                <default>false</default>
                <label>Brochure Request</label>
            </value>
            <value>
                <fullName>Info Request</fullName>
                <default>false</default>
                <label>Info Request</label>
            </value>
            <value>
                <fullName>Price Quotation</fullName>
                <default>false</default>
                <label>Price Quotation</label>
            </value>
            <value>
                <fullName>Reservation</fullName>
                <default>false</default>
                <label>Reservation</label>
            </value>
            <value>
                <fullName>Walked In</fullName>
                <default>false</default>
                <isActive>false</isActive>
                <label>Walked In</label>
            </value>
        </valueSetDefinition>
    </valueSet>
</CustomField>
