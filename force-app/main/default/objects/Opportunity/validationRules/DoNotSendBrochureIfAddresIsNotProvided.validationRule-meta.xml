<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>DoNotSendBrochureIfAddresIsNotProvided</fullName>
    <active>true</active>
    <errorConditionFormula>AND(SendBrochure__c, !Account.HasAddress__c)</errorConditionFormula>
    <errorDisplayField>SendBrochure__c</errorDisplayField>
    <errorMessage>Please enter the address for the customer to send a brochure</errorMessage>
</ValidationRule>
